---
import PageMeta from "../components/PageMeta.astro";
import PageLayout from "../layouts/PageLayout.astro";
import Intro from "../components/Intro.astro";
import AboutTheTheme from "../components/AboutTheTheme.astro";
import BlogCards from "src/components/BlogCards.astro";
import { SITE_TITLE } from "../config";
import TagCards from "src/components/TagCards.astro";
import SearchBox from "src/components/SearchBox.astro";
---

<PageLayout>
  <PageMeta title={`${SITE_TITLE}`} slot="meta" />
  <Fragment slot="main">
    <Intro />
    <!-- <TagCards tags="python" /> -->
    <SearchBox />
    <BlogCards />
    <TagCards tag="Python" />
    <TagCards tag="Open Source" />
    <TagCards tag="Operating System" />

  </Fragment>
</PageLayout>


